<% provide(:title, 'Register')%>
<h1>Register</h1>
<div>
  <div>
    <%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>
      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :bio %>
      <%= f.text_field :bio %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
	  <br>
      <%= f.submit "Create my account", class: "submit-btn" %>
    <% end %>
  </div>
</div>